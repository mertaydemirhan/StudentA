@{
    Layout = null;
}


<div style="display:flex; flex-direction:column; align-items:center">
    <h1 style="font-weight:bold; background-color:forestgreen; color:white; font-size:40px">Verification Successful!</h1>

    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
    {
        <div class="alert alert-success">
            <h2>  <strong>Success!</strong> Your account has been successfully activated. <span><a class="btn btn-primary" href="/User/Login">Click here to login </a></span></h2>
        </div>
    }

    else
    {
        <div class="alert alert-danger">
            <strong>Error</strong> @ViewBag.Message
        </div>
    }
</div>
