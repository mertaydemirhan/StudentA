
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Dashboard/Index.cshtml";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Welcome</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link rel="apple-touch-icon" sizes="76x76" href="assets/img/apple-icon.png" />

    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css"
          href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

    <!-- CSS Files -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/assets/css/material-bootstrap-wizard.css" rel="stylesheet" />
    <style>
        .row .exp {
            font-size: 15px;
            padding: 30px;
        }
    </style>

</head>

<body onload="document.body.className += ' loaded';" class="spinhov">

    <!--   Big container   -->
    <div class="container">

        <div class="row">

            <div class="col-sm-8 col-sm-offset-2">
                <!--      Wizard container        -->
                <div class="wizard-container">
                    <img src="~/Content/assets/img/logo.png" class="spinhov3D" />

                    <div class="card wizard-card" data-color="purple" id="wizard">
                        <form action="" method="">
                            <!--        You can switch " data-color="rose" "  with one of the next bright colors: "blue", "green", "orange", "purple"        -->

                            <div class="wizard-header">
                                <h3 class="wizard-title">
                                    Welcome to StudentA
                                </h3>
                                <div class="tab-pane">
                                    <div class="row">

                                        <p class="exp">
                                            This is a beta version of Studenta framework and work is very much in
                                            progress. Our aim is to empower students and education providers around the
                                            globe. This tool is a first step towards implementing our industry
                                            disrupting global vision.
                                            <br /><br />
                                            Thank you for using Studenta and we look forward to bringing more exciting
                                            features in the future.
                                        </p>


                                    </div>
                                </div>
                            </div>
                            <div class="wizard-footer">

                                <div class="continue">

                                    <input type='button' class='btn btn-fill btn-info btn-wd' name='Continue'
                                           value='Continue' />


                                </div>

                            </div>
                        </form>
                    </div>
                </div> <!-- wizard container -->
            </div>
        </div> <!-- row -->
    </div> <!--  big container -->


    <script src="~/Content/assets/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/jquery.bootstrap.js" type="text/javascript"></script>

    <!--  Plugin for the Wizard -->
    <script src="~/Content/assets/js/material-bootstrap-wizard.js"></script>

    <!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
    <script src="~/Content/assets/js/jquery.validate.min.js"></script>
</body>
<!--   Core JS Files   -->



